# Example secret manifest
# WARNING: DO NOT commit actual secrets to git!
# This is a template only. Use external secrets operator or manual creation.

apiVersion: v1
kind: Secret
metadata:
  name: cqar-secrets
  namespace: cqar
type: Opaque
stringData:
  # Database credentials
  database-password: "CHANGE_ME_SECURE_PASSWORD"
  
  # Redis credentials
  redis-password: "CHANGE_ME_REDIS_PASSWORD"
  
  # API keys (format: key1:name1,key2:name2)
  api-keys: "CHANGE_ME_CQMD_KEY:cqmd_service,CHANGE_ME_CQPM_KEY:cqpm_service"

